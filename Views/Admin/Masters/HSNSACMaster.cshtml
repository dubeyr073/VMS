@model IMS.Models.ViewModel.HSN_SAC_Master
@{
    ViewBag.Title = "HSNSAC Master";
    Layout = "~/Views/Shared/DashBoard/_Layout.cshtml";
}

@{
    var AppToken = Convert.ToString(@Model.AppToken);
}
<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/admin/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>HSNSAC Master</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div id="modelForm">
            <div class="blank">
                <div class="blank-page">
                    <div class="col-lg-12"><p id="msg" style="color:#ef0f44;text-align:center">@ViewBag.Msg</p></div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group pull-right">
                        @using (Html.BeginForm("ManageHSNSACMaster", "Master", FormMethod.Post, new { enctype = "multipart/form-data", @id = "HSNSACMaster" }))
                        {
                            @Html.HiddenFor(m => m.HSN_SACID, htmlAttributes: new { @id = "HSN_SACID" })
                            @Html.HiddenFor(m => m.AppToken)
                            <div class="heading">
                                <h4>
                                    HSN Detail
                                </h4>
                            </div>
                            <br />
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>HSN SAC CODE<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.HSN_SACCODE, htmlAttributes: new { @placeholder = "Enter HSN SAC CODE", @id = "HSN_SACCODE", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Tax Slab<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.Tax_Slab, htmlAttributes: new { @placeholder = "Enter Tax Slab", @id = "Tax_Slab", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>CESS<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.CESS, htmlAttributes: new { @placeholder = "Enter CESS", @id = "CESS", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>CESSP<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.CESSP, htmlAttributes: new { @placeholder = "Enter CESSP", @id = "CESSP", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Start Date<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.StartDate, htmlAttributes: new { @placeholder = "dd/mm/yyyy", @required = "required", @class = "form-control clsDate" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>End Date<span class="mandatory"></span></label>
                                    @Html.TextBoxFor(m => m.EndDate, htmlAttributes: new { @placeholder = "dd/mm/yyyy", @class = "form-control clsDate" })
                                </div>
                            </div>
                            <div class="col-md-10">
                            </div>
                            <div class="col-md-1">
                                <div class="appointment-btn text-lg-right">
                                    <button type="submit" name="btnSubmit" id="btnSubmit" class="btncustome pull-right">Submit</button>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="appointment-btn text-lg-right">
                                    <button type="reset" name="btnReset" id="btnReset" class="btncustome pull-right">Reset</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="blank-page">
                    <div id="listGrid"></div>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
    <!--//content-->
    <!---->
</div>

<script type="text/javascript">
    $(document).ready(function () {
        IMSC.ajaxCall("GET", "/Master/GetHSNSACMaster?AppToken="+'@Model.AppToken', {}, "text", function (d) {
         var HSNSACLists = JSON.parse(d);
         if (HSNSACLists !== "null") {
             var fields = [
                   {
                     title: "Action",
                     width: 30,
                     itemTemplate: function (value, args) {
                         return IMSC.genrateDynamicButtons(value, args,@Model.AuthMode);
                     }
                 },
                 { name: "HSN_SACID", css: "hidden" },
                 { name: "HSN_SAC", type: "text", title: "HSN SAC", sorting: true, filtering: true, width: 50 },
                 { name: "Tax_Slab", type: "text", title: "Tax Slab", sorting: true, filtering: false, width: 50 },
                 { name: "CESS", type: "text", title: "CESS", sorting: true, filtering: false, width: 50 },
                 { name: "CESSP", type: "text", title: "CESSP", sorting: true, filtering: false, width: 50 },
                 { name: "StartDate", type: "text", title: "Start", sorting: true, filtering: false, width: 50 },
                 { name: "EndDate", type: "text", title: "End", sorting: true, filtering: false, width: 50 },
                 {
                     title: "Action",
                     width: 30,
                     HSNSACTemplate: function (value, args) {
                         return IMSC.genrateDynamicButtons(value, args,@Model.AuthMode);
                     }
                 }
             ];
             var options = {
                 filtering: true,
                 editing: true,
                 sorting: true,
                 paging: true,
                 autoload: true,
                 controller: {
                     HSNSACLists: HSNSACLists,
                     loadData: function (filter) {
                         return $.grep(this.HSNSACLists, function (HSNSACList) {
                             return ((!filter.Title || HSNSACList.Title.toLowerCase().indexOf(filter.Title.toLowerCase()) > -1)
                                 && (!filter.Code || HSNSACList.Code.toLowerCase().indexOf(filter.Code.toLowerCase()) > -1));
                         });
                     }
                 },
                 fields: fields
             };
             $.extend(options, IMSC.grid_options);
             $("#listGrid").jsGrid(options);
             IMSC.filteOnKeyPress("#listGrid");
                }
        });

        $('#StartDate').datepicker({
            autoclose: true,
            format: "dd/mm/yyyy",
            immediateUpdates: true,
            todayBtn: true,
            todayHighlight: true
        }).datepicker();

        $('#EndDate').datepicker({
            autoclose: true,
            format: "dd/mm/yyyy",
            immediateUpdates: true,
            todayBtn: true,
            todayHighlight: true
        }).datepicker();
    });

        var editFormData = function (dilogType, HSNSACMaster) {
            $("msg").text = "";
            if (HSNSACMaster.HSNSAC_Id > 0) {
                $("#HSN_SACID").val(HSNSACMaster.HSN_SACID);
                $("#HSN_SAC").val(HSNSACMaster.HSN_SAC);
                $("#Tax_Slab").val(HSNSACMaster.Tax_Slab);
                $("#CESS").val(HSNSACMaster.CESS);
                $("#CESSP").val(HSNSACMaster.CESSP);
                $("#StartDate").val(HSNSACMaster.StartDate);
                $("#EndDate").val(HSNSACMaster.EndDate);
                $("#btnSubmit").text("Update")
            }
            else {
                $("#HSNSACId").val("0");
                $("#btnSubmit").text("Submit")
            }
        };

        var deleteFormData = function (dialogType, HSNSACMaster) {
            var result = confirm("Want to delete?");
            if (result == true) {
                IMSC.ajaxCall("POST", "/Master/DeleteHSNSACMaster?HSNSACId=" + HSNSACMaster.HSN_SACID +"&AppToken=" + '@Model.AppToken', {}, "text", function (d) {
            var result = JSON.parse(d);
            if (result !== "null" && result !== "") {
                window.location.reload();
            }
        });
            } else {
                return false;
            }
    };
</script>
