@model IMS.Models.ViewModel.UserMaster
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/DashBoard/_Layout.cshtml";
}

@{
    var AppToken = Convert.ToString(@Model.AppToken);
}
<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/admin/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Change Password</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div id="modelForm">
            <div class="blank">
                <div class="blank-page">
                    @Html.Partial("~/Views/Shared/_MessageBox.cshtml")
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group pull-right">
                        @using (Html.BeginForm("ManageChangePassword", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "GroupMaster" }))
                        {
                            @Html.HiddenFor(m => m.AppToken)
                            <div class="heading">
                                <h4>
                                    Change Password
                                </h4>
                            </div>
                            <br />
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Old Password<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @placeholder = "Current Password", @id = "CurrentPassword", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Change Password<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.ChangePassword, htmlAttributes: new { @placeholder = "Change Password", @id = "ChangePassword", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Confirm Password<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.ConfirmPassword, htmlAttributes: new { @placeholder = "Confirm Password", @id = "ConfirmPassword", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-10">
                            </div>
                            <div class="col-md-1 pull-right form-group">
                                <div class="appointment-btn text-lg-right">
                                    <button type="reset" name="btnReset" id="btnReset" class="btncustome">Reset</button>
                                </div>
                            </div>
                            <div class="col-md-1 pull-right form-group">
                                <div class="appointment-btn text-lg-right">
                                    <button type="submit" name="btnSubmit" id="btnSubmit" class="btncustome" onclick="return Validate()">Submit</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
    <!--//content-->
    <!---->
</div>

<script type="text/javascript">
    $(document).ready(function () {
        if ('@ViewBag.Msg' != "") {
            $('#alertModal').modal('show');
            $('#msg').html("@ViewBag.Msg");
        }
    });
    function Validate() {
        var password = document.getElementById("ChangePassword").value;
        var confirmPassword = document.getElementById("ConfirmPassword").value;
        if (password != confirmPassword) {
            alert("Passwords do not match. Please check current password and confirm password..!");
            return false;
        }
        return true;
    }
</script>
