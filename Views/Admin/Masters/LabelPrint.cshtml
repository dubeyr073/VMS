@model IMS.Models.ViewModel.BarCodePrint
@{
    ViewBag.Title = "Lebels";
    Layout = "~/Views/Shared/DashBoard/_Layout.cshtml";
}

@{
    var AppToken = Convert.ToString(@Model.AppToken);
}

<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/admin/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Labels</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div id="modelForm">
            <div class="blank">
                <div class="blank-page">
                    @Html.Partial("~/Views/Shared/_MessageBox.cshtml")
                    <div>
                        @Html.HiddenFor(m => m.ItemID, htmlAttributes: new { @id = "ItemID" })
                        @Html.HiddenFor(m => m.AppToken)
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                        @Model.ItemName
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                        @Model.NetQty
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                        @Model.MRP
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                        @Model.HelpLine
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                        @Model.email
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                        @Model.Imported
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                        <img src="@Model.BarCodeImage" alt="Barcoad" />
                    </div>
                    <div id="printarea" class="col-lg-4 col-md-4 col-sm-12 col-xs-12 form-group pull-right">
                        <button class="btn pull-left" id="btnPrint" onclick="GenerateLable();">Generate Label</button>
                        @*<img src="~/ItemBarCode/@Url.Content(@Model.ItemId.ToString() + ".gif" )" alt="" />*@
                    </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!--//content-->
    <!---->
</div>
<script type="text/javascript">
    function printContent(el) {
        var restorepage = $('body').html();
        var printcontent = $('#' + el).clone();
        $('body').empty().html(printcontent);
        window.print();
        $('body').html(restorepage);
    }
    function GenerateLable() {
        window.open("/Reports/ReportViewer.aspx?ReportId=9&ItemID=" + $('#ItemID').val() + "");
    }
</script>
<style>
    @@media print {
        #btnPrint {
            display: none;
        }
    }
</style>
