@model IMS.Models.ViewModel.MaterialOrder
@{
    ViewBag.Title = "Order Creation";
    Layout = "~/Views/Shared/DashBoard/_Layout.cshtml";
}

@{
    var AppToken = Convert.ToString(@Model.AppToken);
}
<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/admin/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Order Creation</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div id="modelForm">
            <div class="blank">
                <div class="blank-page">
                    @Html.Partial("~/Views/Shared/_MessageBox.cshtml")
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group pull-right">
                        @using (Html.BeginForm("ManageOrder", "Material", FormMethod.Post, new { @id = "OrderCreation" }))
                        {
                            @Html.HiddenFor(m => m.AppToken)
                            @Html.HiddenFor(m => m.CompanyId)
                            <div class="heading">
                                <h4>
                                    Order Creation
                                </h4>
                            </div>
                            <br />
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Office<span class="mandatory">*</span></label>
                                    @Html.DropDownListFor(m => m.Office_Id, new SelectList(Model.OfficeLists, "Value", "Text"), htmlAttributes: new { @placeholder = "Select Type", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>PO Number<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.PONo, htmlAttributes: new { @placeholder = "PO No",  @class = "form-control" })
                                </div>
                            </div>
                            @*<div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Code<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.Code, htmlAttributes: new { @placeholder = "Enter Code", @required = "required", @class = "form-control" })
                                </div>
                            </div>*@
                            @*<div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Type<span class="mandatory">*</span></label>
                                    @Html.DropDownListFor(m => m.TypeId, new SelectList(Model.TypeLists, "Value", "Text"), htmlAttributes: new { @placeholder = "Select Type", @required = "required", @class = "form-control" })
                                </div>
                            </div>*@
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Date</label>
                                    @Html.TextBoxFor(m => m.PODate, htmlAttributes: new { @placeholder = "dd/mm/yyyy", @required = "required", @class = "form-control clsDate" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Ledger Balance<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.LedgerBalance, htmlAttributes: new { @placeholder = "Enter Ownership", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-4 form-group">
                                    <label>Cash Balance<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.CashBalance, htmlAttributes: new { @placeholder = "Enter Ownership", @required = "required", @class = "form-control" })
                                </div>
                            </div>


                            <div class="styled-input">
                                <div class="col-md-6 form-group">
                                    <label>OverdueAmount<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.OverdueAmount, htmlAttributes: new { @placeholder = "Enter Address1", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-6 form-group">
                                    <label>TotalAmount<span class="mandatory">*</span></label>
                                    @Html.TextBoxFor(m => m.TotalAmount, htmlAttributes: new { @placeholder = "Enter Address2", @required = "required", @class = "form-control" })
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <label>Remarks</label>
                                    @Html.TextAreaFor(m => m.Remarks, htmlAttributes: new { @placeholder = "Remarks", @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-10"></div>
                            <div class="col-md-1">
                                <div class="appointment-btn text-lg-right">
                                    <button type="submit" name="btnSubmit" id="btnSubmit" class="btncustome pull-right">Submit</button>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="appointment-btn text-lg-right">
                                    <button type="reset" name="btnReset" id="btnReset" class="btncustome pull-right">Reset</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="blank-page">
                    <div id="listGrid"></div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!--//content-->
    <!---->
</div>

<script type="text/javascript">
    $(document).ready(function () {
        if ('@ViewBag.Msg' != "") {
            $('#alertModal').modal('show');
            $('#msg').html("@ViewBag.Msg");
        }
        IMSC.ajaxCall("GET", "/Master/GetCompanyMaster?AppToken="+'@Model.AppToken', {}, "text", function (d) {
            var result = JSON.parse(d);
            if (result !== "null" && result !== "") {
                var fields = [
                    {
                        title: "Action",
                        width: 30,
                        itemTemplate: function (value, args) {
                            return IMSC.genrateDynamicButtons(value, args,@Model.AuthMode);
                        }
                    },
                    { name: "Company_Id", css: "hidden", },
                    { name: "Title",type:"text", title: "Title", sorting: true, filtering: true, width: 50 },
                    { name: "Code", type: "text", title: "Code", sorting: true, filtering: true, width: 40 },
                    { name: "Ownership", title: "Ownership", sorting: true, filtering: true, width: 30 },
                    { name: "Type_Id", css: "hidden", },
                    { name: "Financial_Id", css: "hidden", },
                    { name: "StartDate", title: "Start Date", sorting: true, filtering: true, width: 20 },
                    { name: "OpeningBalance", title: "Opening Balance", sorting: true, filtering: true, width: 20 },

                ];
                var options = {
                    filtering: true,
                    editing: true,
                    sorting: true,
                    paging: true,
                    autoload: true,
                    controller: {
                        CompanyLists: result,
                        loadData: function (filter) {
                            return $.grep(this.CompanyLists, function (CompanyList) {
                                return ((!filter.Title || CompanyList.Title.toLowerCase().indexOf(filter.Title.toLowerCase()) > -1)
                                    && (!filter.Code || CompanyList.Code.toLowerCase().indexOf(filter.Code.toLowerCase()) > -1));
                            });
                        }
                    },
                    fields: fields
                };
                $.extend(options, IMSC.grid_options);
                $("#listGrid").jsGrid(options);
                IMSC.filteOnKeyPress("#listGrid");
            }

        });
        $('#StartDate').datepicker({
            autoclose: true,
            format: "dd/mm/yyyy",
            immediateUpdates: true,
            todayBtn: true,
            todayHighlight: true
        }).datepicker();

    });

    var editFormData = function (dilogType, CompanyMaster) {
        if (CompanyMaster.Company_Id > 0) {
            $("#msg").text("");
            $("#CompanyId").val(CompanyMaster.Company_Id);
            $("#Title").val(CompanyMaster.Title);
            $("#Code").val(CompanyMaster.Code);
            $("#Ownership").val(CompanyMaster.Ownership);
            $("#Address1").val(CompanyMaster.Address1);
            $("#Address2").val(CompanyMaster.Address2);
            $("#Remarks").val(CompanyMaster.Remarks);
            $("#TypeId").val(CompanyMaster.Type_Id);
            $("#FinancialId").val(CompanyMaster.Financial_Id);
            $("#btnSubmit").text("Update")
        }
        else {
            $("#CompanyId").val("0");
            $("#btnSubmit").text("Submit")
        }
    };

    var deleteFormData = function (dialogType, CompanyMaster) {
        var result = confirm("Want to delete?");
        if (result == true) {
            IMSC.ajaxCall("POST", "/Master/DeleteCompanyMaster?companyId="+CompanyMaster.Company_Id +"&AppToken=" + '@Model.AppToken', {}, "text", function (d) {
            var result = JSON.parse(d);
            if (result !== "null" && result !== "") {
                window.location.reload();
            }
        });
        } else {
            return false;
        }
    };
</script>